<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".TestActivity" >

    <TextView
        android:id="@+id/test_login_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
    </TextView>

    <Button
        android:id="@+id/test_login_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/up_demo_login" />

    <Button
        android:id="@+id/test_switchuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/up_demo_switch_user" />
    <Button
        android:id="@+id/test_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=""
        android:visibility="gone" />
    <Button
        android:id="@+id/test_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/up_demo_pay" />

    <Button
        android:id="@+id/test_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/up_demo_logout" />

</LinearLayout>